<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/chatmain_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#FFBB00">

        <Button
            android:id="@+id/group_exit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <Button
            android:id="@+id/upload"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FFBB00"
            android:fontFamily="@font/soldier"
            android:text="완료"
            android:textColor="#751400"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatmain_top" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fadeScrollbars="true"
            android:overScrollMode="ifContentScrolls"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="right">

            <LinearLayout
                android:id="@+id/buy_picture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:clipToPadding="false"
                android:gravity="center">

                <ImageView
                    android:id="@+id/buyimageview"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_add_a_photo_24" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/buy_mid"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/buy_picture"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/addbuy_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border1"
                    android:hint="제목"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_mid1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/buy_mid"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/addbuy_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border1"
                    android:hint="가격"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_mid2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/buy_mid1"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/addbuy_headCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border1"
                    android:hint="인원수 ( 수만 입력하세요)"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_mid3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/buy_mid2"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/addbuy_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border1"
                    android:hint="만남장소"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_mid4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/buy_mid3"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/addbuy_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border1"
                    android:hint="내용"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="25sp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>