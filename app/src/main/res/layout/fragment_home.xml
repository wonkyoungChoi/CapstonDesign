<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE289"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#F6EFAD"
            android:orientation="vertical">

        </LinearLayout>

        <FrameLayout
            android:id="@+id/bellclick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bell"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/bell" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="456dp"
                android:layout_height="187dp"
                android:contentDescription="TODO"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="98dp">

            <ImageButton
                android:id="@+id/search"
                android:layout_width="314dp"
                android:layout_height="53dp"
                android:background="@drawable/button"
                android:backgroundTint="@color/white"
                android:contentDescription="TODO"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.133"
                app:srcCompat="@drawable/button" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button">

            <androidx.cardview.widget.CardView
                android:layout_width="295dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="310dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/custom_button"
                    android:gravity="center">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="@color/com_kakao_button_background_press"
                        app:sliderIndicatorUnselectedColor="#FFFACD"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FAF7DE"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6EFAD"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>