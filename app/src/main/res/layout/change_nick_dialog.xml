<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:text="닉네임 설정" />

    <RelativeLayout
        android:id="@+id/check_layout"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/c_nick"
            android:text="닉네임"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_line"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_width="150dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/change_nick_check"
            android:text="중복확인"
            android:textColor="@color/com_facebook_blue"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/c_nick"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/check_layout">

        <Button
            android:id="@+id/noBtn"
            android:layout_width="0dp"
            android:background="@drawable/button_left_line"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_weight="1"
            android:text="아니오" />

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:background="@drawable/button_right_line"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="변경하기" />
    </LinearLayout>

</RelativeLayout>
