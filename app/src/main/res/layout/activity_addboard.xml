<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/chatmain_top"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="커뮤니티 게시글 작성"/>


        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="17sp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_upload"
            android:text="작성 완료"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatmain_top"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/boardplus_mid1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border3"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/add_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_mid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/boardplus_mid1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addboard_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border3"
                android:hint="제목"
                android:textColor="#000000"
                android:textColorHint="#939393"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_mid4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buy_mid"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addboard_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border3"
                android:hint="내용"
                android:textColor="#000000"
                android:textColorHint="#939393"
                android:textSize="25sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>