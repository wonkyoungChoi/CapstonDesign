<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/chatmain_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#FFBB00">

        <Button
            android:id="@+id/board_exit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <Button
            android:id="@+id/upload"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FFBB00"
            android:fontFamily="@font/soldier"
            android:text="완료"
            android:textColor="#751400"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatmain_top"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/boardplus_mid1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_add_a_photo_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_mid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/boardplus_mid1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addboard_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border1"
                android:hint="제목"
                android:textColor="#000000"
                android:textColorHint="#939393"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_mid4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/buy_mid"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addboard_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border1"
                android:hint="내용"
                android:textColor="#000000"
                android:textColorHint="#939393"
                android:textSize="25sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>